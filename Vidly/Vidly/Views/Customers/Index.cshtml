@model Vidly.ViewModels.ICustomersViewModel

<h2>Customers</h2>
<div>
    @Html.ActionLink(Model.NewCustomer.Display, Model.NewCustomer.ActionName, Model.NewCustomer.ControllerName, Model.NewCustomer.ActionProperties, new { @class = "btn btn-primary" })
</div>
<table class="table table-bordered table-hover">
    <tr>
        <th>Customer</th>
        <th>Membership</th>
    </tr>
    @foreach (var customer in Model.Customers) {
        <tr>
            <td>@Html.ActionLink(customer.Name, customer.DetailLink.ActionName, customer.DetailLink.ControllerName, customer.DetailLink.ActionProperties, null)</td>
            <td>@customer.MembershipName</td>
        </tr>
    }
</table>
