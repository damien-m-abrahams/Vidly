@model Vidly.ViewModels.IMoviesViewModel

<h2>Movies</h2>
<div>
    @Html.ActionLink(Model.NewMovie.Display, Model.NewMovie.ActionName, Model.NewMovie.ControllerName, Model.NewMovie.ActionProperties, new { @class = "btn btn-primary" })
</div>
<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
        @foreach (var movie in Model.Movies) {
            <tr>
                <td>@Html.ActionLink(movie.Name, movie.DetailLink.ActionName, movie.DetailLink.ControllerName, movie.DetailLink.ActionProperties, null)</td>
                <td>@movie.Genre</td>
            </tr>
        }
    </table>
</div>

